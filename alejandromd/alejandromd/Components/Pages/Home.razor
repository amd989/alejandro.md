@page "/"

<PageTitle>Alejandro Mora - Software Engineer</PageTitle>

<div class="intro">
    <div class="intro-content">
        <p class="intro-location">· New York, USA</p>
        <h1>Hey, I'm Alejandro Mora <span class="wave-emoji">👋</span></h1>
        <p>
            I'm a Software Engineer based in New York City. I <a href="https://l.alejandro.md/github">code</a>, <a href="https://l.alejandro.md/blog">write</a>
        </p>
        <p>
            I love working in-between product, engineering and
            developer experience, currently at <a href="#">Company</a>.
        </p>
    </div>
    <div class="intro-image">
        <img src="/img/profile.jpeg" alt="Alejandro Mora Profile Picture" width="200" height="200">
    </div>
</div>

<section class="section">
    <div class="section-heading">
        <h2>Writings</h2>
        <a href="https://l.alejandro.md/blog" class="view-all">View all →</a>
    </div>

    <div class="blog-list">
        @foreach (var post in posts)
        {
            <div class="blog-item">
                <div class="blog-item-header">
                    <div>
                        <p class="blog-item-date">@post.PublishDate.ToString("MMM dd, yyyy")</p>
                        <h3 class="blog-item-title">
                            <a href="@post.Link">@post.Title</a>
                        </h3>
                    </div>
                    <span class="blog-item-views">@post.Views views</span>
                </div>
            </div>
        }
    </div>
</section>

<section class="section">
    <div class="section-heading">
        <h2>Projects</h2>
    </div>

    <div class="projects-grid">
        @foreach (var repo in repositories)
        {
            <div class="project-card">
                <h3 class="project-title">@repo.Name</h3>
                <p class="project-description">@repo.Description</p>
                <div class="project-meta">
                    <span class="project-language">@repo.Language</span>
                    <span class="project-stars">★ @repo.StargazersCount</span>
                </div>
            </div>
        }
    </div>
</section>

